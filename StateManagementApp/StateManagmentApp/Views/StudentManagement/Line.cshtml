@model List<StudentMarkDetails>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4 class="display-4">Students Mark Details By Line Chart</h4>
    <h3><a href="~/Home/Index">Back</a></h3>
    <div class="card">
        <div class="card-header">
            <div class="chart1">
                <canvas id="myChart2"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>
<script>

    var Physics = [];
    var Chemistry = [];
    var Biology = [];
    var Mathematics = [];
    var English = [];

    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <text>
                Physics.push(@item.Physics);
            Chemistry.push(@item.Chemistry);
            Biology.push(@item.Biology);
            Mathematics.push(@item.Mathematics);
            English.push(@item.English); // Assuming you have an English property in StudentMarkDetails
            </text>
        }
    }

        var Chart2 = document.getElementById('myChart2').getContext('2d');
    var chart = new Chart(Chart2, {
        type: 'line',
        data: {
            labels: ["Ajinkya", "Nayan", "Bhupendra", "Shridhar", "Ritesh"], // x axis labels
            datasets: [
                {
                    label: "Physics",
                    backgroundColor: 'transparent',
                    borderColor: "#ff0000",
                    borderWidth: 2,
                    pointBorderColor: false,
                    startAngle: 0,
                    data: Physics,
                    fill: false,
                    lineTension: .4,
                    showLine: true,
                },
                {
                    label: "Chemistry",
                    backgroundColor: "transparent",
                    borderColor: "#660066",
                    borderWidth: 2,
                    pointBorderColor: false,
                    startAngle: 0,
                    data: Chemistry,
                    fill: false,
                    lineTension: .4,
                    showLine: true,
                },
                {
                    label: "Biology",
                    backgroundColor: "transparent",
                    borderColor: "#00b300",
                    borderWidth: 2,
                    pointBorderColor: false,
                    startAngle: 0,
                    data: Biology,
                    fill: false,
                    lineTension: .4,
                    showLine: true,
                },
                {
                    label: "Mathematics",
                    backgroundColor: "transparent",
                    borderColor: "#3333cc",
                    borderWidth: 2,
                    pointBorderColor: false,
                    startAngle: 0,
                    data: Mathematics,
                    fill: false,
                    lineTension: .4,
                    showLine: true,
                }
            ]
        },

        // Configuration options
        options: {
            title: {
                display: true,
                text: "Student Mark Details"
            },
            scales: {
                xAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Students'
                    }
                }],
                yAxes: [{
                    scaleLabel: {
                        display: true,
                        labelString: 'Marks'
                    },
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

</script>
