<h1>Customers List</h1>
<hr />

@{
    List<Customer> allCustomers = (List<Customer>)ViewData["allCustomers"];
}
<ol>
    @{
        foreach (Customer customer in allCustomers)
        {
            <li>@customer.Name <a href="/customers/details/@customer.Id">details</a> | <a href="/customers/remove/@customer.Id">remove</a></li>
        }
    }
