@using MVCWebAppDB.Models;
@{
    ViewData["Title"] = "Index";
}

<h1>Employes</h1>

<p><a href="/employee/Insert">Create New</a> </p>

<table class="table">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Role</label>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            List<Employee> allEmployees = (List<Employee>)ViewData["allEmployees"];
        }
        @foreach (var item in allEmployees)
        {
            <tr>
                <td>
                    <p> @item.Id </p>
                </td>
                <td>
                    <p> @item.Name  </p>
                </td>
                <td>
                    <p> @item.Role  </p>
                </td>
                <td>
                    <a href="/employee/details/@item.Id">Details</a>
                </td>

                <td>
                    <a href="/employee/remove/@item.Id">Remove</a>
                </td>

                <td>
                    <a href="/employee/update/@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
